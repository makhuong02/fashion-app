<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<ImageView
		android:id="@+id/chip_image1"
		android:layout_width="@dimen/size_chip_image"
		android:layout_height="@dimen/size_chip_image"
		android:background="@android:color/transparent"
		android:contentDescription="@null"
		android:scaleType="centerCrop"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<ImageView
		android:id="@+id/chip_image2"
		android:layout_width="@dimen/size_chip_image"
		android:layout_height="@dimen/size_chip_image"
		android:layout_marginStart="@dimen/ex_xs_spacing"
		android:background="@android:color/transparent"
		android:contentDescription="@null"
		android:scaleType="centerCrop"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@+id/chip_image1"
		app:layout_constraintTop_toTopOf="parent" />
	
	<ImageView
		android:id="@+id/chip_image3"
		android:layout_width="@dimen/size_chip_image"
		android:layout_height="@dimen/size_chip_image"
		android:layout_marginStart="@dimen/ex_xs_spacing"
		android:background="@android:color/transparent"
		android:contentDescription="@null"
		android:scaleType="centerCrop"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@+id/chip_image2"
		app:layout_constraintTop_toTopOf="parent" />
	
	<ImageView
		android:id="@+id/chip_image4"
		android:layout_width="@dimen/size_chip_image"
		android:layout_height="@dimen/size_chip_image"
		android:layout_marginStart="@dimen/ex_xs_spacing"
		android:background="@android:color/transparent"
		android:contentDescription="@null"
		android:scaleType="centerCrop"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@+id/chip_image3"
		app:layout_constraintTop_toTopOf="parent" />
	
	<ImageView
		android:id="@+id/chip_image5"
		android:layout_width="@dimen/size_chip_image"
		android:layout_height="@dimen/size_chip_image"
		android:layout_marginStart="@dimen/ex_xs_spacing"
		android:background="@android:color/transparent"
		android:contentDescription="@null"
		android:scaleType="centerCrop"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@+id/chip_image4"
		app:layout_constraintTop_toTopOf="parent" />
	
	<ImageView
		android:id="@+id/chip_image6"
		android:layout_width="@dimen/size_chip_image"
		android:layout_height="@dimen/size_chip_image"
		android:layout_marginStart="@dimen/ex_xs_spacing"
		android:background="@android:color/transparent"
		android:contentDescription="@null"
		android:scaleType="centerCrop"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@+id/chip_image5"
		app:layout_constraintTop_toTopOf="parent" />
	
	<ImageView
		android:id="@+id/chip_image7"
		android:layout_width="@dimen/size_chip_image"
		android:layout_height="@dimen/size_chip_image"
		android:layout_marginStart="@dimen/ex_xs_spacing"
		android:background="@android:color/transparent"
		android:contentDescription="@null"
		android:scaleType="centerCrop"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@+id/chip_image6"
		app:layout_constraintTop_toTopOf="parent" />
	
	<ImageView
		android:id="@+id/chip_image8"
		android:layout_width="@dimen/size_chip_image"
		android:layout_height="@dimen/size_chip_image"
		android:layout_marginStart="@dimen/ex_xs_spacing"
		android:background="@android:color/transparent"
		android:contentDescription="@null"
		android:scaleType="centerCrop"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
