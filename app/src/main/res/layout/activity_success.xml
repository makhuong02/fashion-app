<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FEFEFE"
	>
	

		<pl.droidsonroids.gif.GifImageView
			android:id="@+id/successGif"
			android:layout_width="200dp"
			android:layout_height="200dp"

			android:src="@drawable/successfully_done"
			android:layout_marginBottom="10dp"
			app:layout_constraintBottom_toTopOf="@id/successfulText"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			>
			
		</pl.droidsonroids.gif.GifImageView>
		
		<TextView
			android:id="@+id/successfulText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"

			android:text="Successful!"
			android:textAppearance="@style/H3"
			android:textSize="30sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			/>
		<TextView
			android:id="@+id/successfulDescription"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="10dp"
			android:paddingEnd="70dp"
			android:paddingStart="70dp"
			android:text="@string/successfulDescription"
			android:gravity="center"
			android:textColor="@color/nickel"
			android:textAppearance="@style/DirectFontRegular"
			app:layout_constraintTop_toBottomOf="@id/successfulText"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:textSize="15sp" />
	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/continueButton"
		style="@style/Subtitle2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:layout_marginBottom="80dp"
		android:background="@color/primary_black"
		android:foreground="?attr/selectableItemBackgroundBorderless"
		android:text="Continue"
		android:textColor="@color/primary_white"
		android:textSize="16sp"
		android:visibility="visible"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">
		
	</androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>