									app:layout_constraintStart_toStartOf="parent"
									app:layout_constraintTop_toBottomOf="@id/lastNameInputLayout"
									app:layout_constraintVertical_bias="0.0" />
								
								<com.google.android.material.textfield.TextInputLayout
									android:id="@+id/addressDetailsInputLayout"
									style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
									android:layout_width="0dp"
									android:layout_height="wrap_content"
									android:layout_marginStart="@dimen/m_spacing"
									android:layout_marginEnd="@dimen/m_spacing"
									app:endIconMode="clear_text"
									android:foreground="?attr/selectableItemBackground"
									app:helperTextTextColor="@color/error_red"
									app:layout_constraintEnd_toStartOf="@id/map_button"
									app:layout_constraintStart_toStartOf="parent"
									app:layout_constraintTop_toBottomOf="@id/address_details_text">
									
									<com.google.android.material.textfield.TextInputEditText
										android:id="@+id/addressDetailsEditText"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:editable="false"
										android:hint="Please select from map" />
								</com.google.android.material.textfield.TextInputLayout>
								
								<ImageView
									android:id="@+id/map_button"
									android:layout_width="30dp"
									android:layout_height="30dp"
									android:layout_marginEnd="@dimen/m_spacing"
									android:clickable="true"
									android:focusable="true"
									android:foreground="?attr/selectableItemBackground"
									android:src="@drawable/google_maps"
									app:layout_constraintBottom_toBottomOf="@+id/addressDetailsInputLayout"
									app:layout_constraintEnd_toEndOf="parent"
									app:layout_constraintStart_toEndOf="@+id/addressDetailsInputLayout"
									app:layout_constraintTop_toTopOf="@+id/addressDetailsInputLayout">
								
								</ImageView>
								
								<androidx.constraintlayout.widget.ConstraintLayout
									android:id="@+id/current_location_layout"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginStart="@dimen/m_spacing"
									android:layout_marginTop="@dimen/xs_spacing"
									android:layout_marginEnd="@dimen/m_spacing"
									android:clickable="true"
									android:focusable="true"
									android:foreground="?attr/selectableItemBackground"
									android:orientation="horizontal"
									app:layout_constraintStart_toStartOf="parent"
									app:layout_constraintTop_toBottomOf="@+id/addressDetailsInputLayout">
									
									<ImageView
										android:id="@+id/current_location_image"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:src="@drawable/baseline_my_location_24"
										app:layout_constraintStart_toStartOf="parent"
										app:layout_constraintTop_toTopOf="parent">
									
									</ImageView>
									
									<TextView
										android:id="@+id/current_location_text"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:layout_marginStart="@dimen/s_spacing"
										android:text="Use current location"
										android:textColor="@color/noticeable"
										app:layout_constraintStart_toEndOf="@+id/current_location_image"
										app:layout_constraintTop_toTopOf="@+id/current_location_image"
										app:layout_constraintBottom_toBottomOf="@+id/current_location_image">
									
									</TextView>
								
								</androidx.constraintlayout.widget.ConstraintLayout>
								
								<TextView
									android:id="@+id/question_text"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginStart="@dimen/m_spacing"
									android:layout_marginTop="@dimen/xs_spacing"
									android:layout_marginEnd="@dimen/m_spacing"
									android:text="You may be contacted via phone or email if we have questions about your order and delivery."
									android:textColor="@color/primary_black"
									app:layout_constraintStart_toStartOf="parent"
									app:layout_constraintTop_toBottomOf="@+id/current_location_layout" />
							
							</androidx.constraintlayout.widget.ConstraintLayout>
						
						</androidx.constraintlayout.widget.ConstraintLayout>
					
					</com.google.android.material.card.MaterialCardView>
					
