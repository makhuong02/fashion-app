								android:id="@+id/ship_to_address_check_box"
								android:layout_width="30dp"
								android:layout_height="wrap_content"
								android:layout_marginStart="@dimen/m_spacing"
								android:button="@drawable/check_box_checkout"
								android:clickable="true"
								android:focusable="true"
								app:layout_constraintBottom_toBottomOf="@id/ship_to_address_text"
								app:layout_constraintEnd_toStartOf="@id/ship_to_address_text"
								app:layout_constraintStart_toStartOf="parent"
								app:layout_constraintTop_toTopOf="@id/ship_to_address_text" />
							
							<TextView
								android:id="@+id/ship_to_address_text"
								style="@style/Headline3"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginStart="@dimen/xs_spacing"
