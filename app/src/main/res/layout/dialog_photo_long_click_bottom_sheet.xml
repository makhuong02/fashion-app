<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white"
	android:orientation="vertical">
	
	<androidx.cardview.widget.CardView
		android:id="@+id/saveActionCardView"
		android:layout_width="match_parent"
		android:layout_height="70dp"
		android:clickable="true"
		android:focusable="true"
		android:foreground="?android:attr/selectableItemBackground"
		app:cardCornerRadius="0dp"
		app:cardBackgroundColor="@color/primary_white"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			
			<com.google.android.material.imageview.ShapeableImageView
				android:id="@+id/saveActionImg"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginStart="@dimen/m_spacing"
				android:contentDescription="@string/content_description_media"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/round_save_alt_24"
				
				/>
			
			<TextView
				android:id="@+id/saveActionTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/m_spacing"
				android:text="@string/save_to_phone"
				android:textColor="@color/primary_black"
				android:fontFamily="@font/uniqlopro_regular"
				android:textSize="18sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@id/saveActionImg"
				app:layout_constraintTop_toTopOf="parent">
			</TextView>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>
	
	<androidx.cardview.widget.CardView
		android:id="@+id/shareActionCardView"
		android:layout_width="match_parent"
		android:layout_height="70dp"
		android:clickable="true"
		android:focusable="true"
		android:foreground="?android:attr/selectableItemBackground"
		app:cardCornerRadius="0dp"
		app:cardBackgroundColor="@color/primary_white"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			
			<com.google.android.material.imageview.ShapeableImageView
				android:id="@+id/shareActionImg"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginStart="@dimen/m_spacing"
				android:contentDescription="@string/content_description_media"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/baseline_share_24"
				
				/>
			
			<TextView
				android:id="@+id/shareActionTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/m_spacing"
				android:text="@string/share_external"
				android:textColor="@color/primary_black"
				android:fontFamily="@font/uniqlopro_regular"
				android:textSize="18sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@id/shareActionImg"
				app:layout_constraintTop_toTopOf="parent">
			</TextView>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>


</LinearLayout>
