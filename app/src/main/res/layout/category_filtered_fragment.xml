<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:tag="layout/fragment_favorite_product_list_0">
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/layout_tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/primary_white"
		android:elevation="4dp">
		
		<include
			android:id="@+id/search_view"
			layout="@layout/view_store_selection_search"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
		
		<TextView
			android:id="@+id/text_product_count"
			style="@style/Body2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/m_spacing"
			android:text="@string/text_favorite_count"
			android:textAllCaps="true"
			android:textColor="@color/primary_black"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/search_view" />
		
		<include
			android:id="@+id/app_toolbar"
			layout="@layout/view_progressbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/text_product_count" />
	</androidx.constraintlayout.widget.ConstraintLayout>
	
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/productRecyclerView"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	</androidx.core.widget.NestedScrollView>
</LinearLayout>

