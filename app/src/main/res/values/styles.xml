<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
	
	</style>
	
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
	
	</style>
	
	<style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
		<item name="android:progressDrawable">@drawable/outline_star_outline_24</item>
		<item name="android:minHeight">48dip</item>
		<item name="android:maxHeight">48dip</item>
	</style>
	
	<style name="AppTheme.AppBarOverlay"></style>
	
	<style name="Headline3">
		<item name="android:textSize">@dimen/textsize_h3</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:fontFamily">@font/uniqlopro_bold</item>
	</style>
	
	<style name="Headline3.NoCaps">
		<item name="android:textSize">@dimen/textsize_h3</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:fontFamily">@font/uniqlopro_bold</item>
	</style>
	
	<style name="Caption1">
		<item name="android:textSize">@dimen/textsize_caption_1</item>
	</style>
	
	<style name="DirectFontRegular">
		<item name="fontFamily">@font/uniqlopro_regular</item>
	</style>
	
	<style name="BodyStandard">
		<item name="android:textSize">@dimen/textsize_body_standard</item>
	</style>
	
	<style name="Subtitle1">
		<item name="android:textSize">@dimen/textsize_subtitle_1</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:fontFamily">@font/uniqlopro_bold</item>
	</style>
	
	<style name="Subtitle1.NoCaps">
		<item name="android:textSize">@dimen/textsize_subtitle_1</item>
