+        if (dy < 0) {
+            showBottomNavigationView(child);
+        } else if (dy > 0) {
+            hideBottomNavigationView(child);
+        }
+    }
+
+    private void hideBottomNavigationView(BottomNavigationView view) {
+        view.animate().translationY(view.getHeight());
